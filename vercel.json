{
  "version": 2,
  "builds": [
    {
      "src": "my-react-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "my-react-app/dist"
      }
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/my-react-app/dist/$1"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "FLASK_APP": "backend/main.py"
  }
}
